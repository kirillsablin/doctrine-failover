{
    "name": "doctrine-extensions/doctrine-failover",
    "description": "Doctrine mysql master-master failover with automatic failback",

    "require": {
        "php": ">=5.3.0",
        "doctrine/dbal": "2.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "behat/behat": "2.4.*@stable"
    },

    "config": {
        "bin-dir": "bin/"
    },

    "include-path": [
        "src"
    ],

    "autoload": {
        "psr-0": {
            "DoctrineExtensions\\": "src/"
        }
    }
}